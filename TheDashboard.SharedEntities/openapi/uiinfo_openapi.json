{
  "openapi": "3.0.1",
  "info": {
    "title": "UI Information API",
    "description": "This service is primarily the Socket Hub that broadcasts messages to tiles through SignalR Hubs. The API is for management purpose only.",
    "version": "v1"
  },
  "paths": {
    "/api/Values/{id}": {
      "post": {
        "tags": [
          "Values"
        ],
        "operationId": "Value",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "value",
            "in": "body",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "500": {
            "description": "Server Error"
          },
          "204": {
            "description": "No Content"
          }
        },
        "400": {
          "description": "Bad Request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ErrorResult"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorResult": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "tileId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": {}
      }
    }
  }
}